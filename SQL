create table db.products(
  id number not null,
  name varchar2(255) null,

  constraint pk_products primary key(id)
);

create table db.categories(
  id number not null,
  name varchar2(255) null,

  constraint pk_categories primary key(id)
);

create table db.products_map(
  product_id number not null,
  category_id number not null,

  constraint products_map_product foreign key (product_id) references db.products(id),
  constraint products_map_category foreign key (category_id) references db.categories(id)
);

insert into db.categories (id, name) values (1,'А1');
